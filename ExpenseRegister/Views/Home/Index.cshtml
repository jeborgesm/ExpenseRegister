


<div class=" body-content" ng-app="Expenses" ng-controller="crudController">
    <div class="row">
        <form novalidate ng-submit="add()" id="expForm">
            <h4>Expense</h4>
            <hr />

            <div class="form-group">
                <label class="control-label col-md-2" for="Date">Date</label>
                <div class="col-md-10">
                    <input required ng-model="Expenses.Date" class="form-control text-box single-line" data-val="true"
                           data-val-date="The field Date must be a date."
                           data-val-required="The Date field is required." id="Date" name="Date" type="text" value="" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="Date" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Description">Description</label>
                <div class="col-md-10">
                    <input required ng-model="Expenses.Description" class="form-control text-box single-line" data-val="true"
                           data-val-required="The Description field is required." id="Description" name="Description" type="text" value="" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="Description" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Amount">Amount</label>
                <div class="col-md-10">
                    <input required ng-model="Expenses.Amount" class="form-control text-box single-line" data-val="true"
                           data-val-number="The field Amount must be a number."
                           data-val-required="The Amount field is required." id="Amount" name="Amount" type="number" value="" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="Amount" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="CategoryID">CategoryID</label>
                <div class="col-md-10">
                    <select class="form-control" id="CategoryID" name="CategoryID"></select>
                    <span class="field-validation-valid text-danger" data-valmsg-for="CategoryID" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="SubCategoryID">SubCategoryID</label>
                <div class="col-md-10">
                    <select class="form-control" id="SubCategoryID" name="SubCategoryID"></select>
                    <span class="field-validation-valid text-danger" data-valmsg-for="SubCategoryID" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </form>

    </div>
    <br />
    <div class="row">
        <table class="table" >
            <tr>

                <th>
                    Date
                </th>
                <th>
                    Description
                </th>
                <th>
                    Category
                </th>
                <th>
                    SubCategory
                </th>
                <th>
                    Amount
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="exp in expenses">
                <td>
                    {{exp.Date}}
                </td>
                <td>
                    {{exp.Description}}
                </td>
                <td>
                    {{exp.Category}}
                </td>
                <td>
                    {{exp.SubCategory}}
                </td>
                <td>
                    {{exp.Amount}}
                </td>
                <td>
                    <a href="/Expenses/Edit/{{exp.Id}}">Edit</a> |
                    <a href="/Expenses/Details/{{exp.Id}}">Details</a> |
                    <a href="/Expenses/Delete/{{exp.Id}}">Delete</a>
                </td>
            </tr>
        </table>
    </div>
</div>
